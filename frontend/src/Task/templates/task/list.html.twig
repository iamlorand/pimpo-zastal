{% extends '@layout/default.html.twig' %}

{% block title %}{{ pageTitle }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 no-padding forms">
                <h1>{{ pageTitle }}</h1>
                <a href="{{ path('task', {'action' : 'add'}) }}">Add new task</a>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>Minutes</th>
                            <th>Date</th>
                            <th colspan="2" style="text-align: center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for task in taskList %}
                            <tr>
                                <td>{{ task.title }}</td>
                                <td>{{ task.description }}</td>
                                <td>{{ task.category.title }}</td>
                                <td>{{ task.minutes }}</td>
                                <td>{{ task.date }}</td>
                                <td>
                                    <a href="{{ path('task', {'action' : 'update', 'id' : task.id }) }}">Update</a>
                                </td>
                                <td>
                                    <a href="{{ path('task', {'action' : 'delete', 'id' : task.id }) }}">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}